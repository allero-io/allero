{
    "description": "Prevent use of password as plain text",
    "failureMessage": "a password key is used without obfuscation. We recommend using github secrets manager instead",
    "uniqueId": 7,
    "enabledByDefault": true,
    "schema": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "projects": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "gitlab-ci": {
                    "type": "object",
                    "additionalProperties": {
                      "properties": {
                        "content": {
                          "type": "object",
                          "additionalProperties": {
                            "properties": {
                              "steps": {
                                "type": "array",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "with": {
                                      "type": "object",
                                      "patternProperties": {
                                        ".*password.*": {
                                          "type": "string",
                                          "pattern": "\\${{.*}}( *|$)"
                                        }
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
}
