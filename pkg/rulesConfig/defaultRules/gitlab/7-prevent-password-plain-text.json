{
  "description": "Prevent use of password as plain text",
  "failureMessage": "a password key is used without obfuscation. We recommend using github secrets manager or gitlab-vault instead",
  "uniqueId": 7,
  "enabledByDefault": true,
  "schema": {
    "type": "object",
    "additionalProperties": {
      "type": "object",
      "properties": {
        "projects": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "gitlab-ci": {
                "type": "object",
                "additionalProperties": {
                  "properties": {
                    "content": {
                      "allOf": [
                        {
                          "type": "object",
                          "properties": {
                            "variables": {
                              "type": "object",
                              "patternProperties": {
                                ".*password.*": {
                                    "type": "string",
                                    "pattern": "\\$.*"
                                }
                              }
                            }
                          }
                        },
                        {
                          "type": "object",
                          "additionalProperties": {
                              "properties": {
                                "variables": {
                                  "type": "object",
                                  "patternProperties": {
                                    ".*password.*": {
                                        "type": "string",
                                        "pattern": "\\$.*"
                                    }
                                  }
                                }
                              }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              "jfrog-pipelines": {}
            }
          }
        }
      }
    }
  } 
}
