{
    "description": "Ensure action version is set",
    "failureMessage": "github action version should be set",
    "uniqueId": 1,
    "enabledByDefault": true,
    "schema": {
        "type": "object",
        "additionalProperties": {
            "type": "object",
            "properties": {
                "projects": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "gitlab-ci": {
                                "type": "object",
                                "additionalProperties": {
                                    "properties": {
                                        "content": {
                                            "type": "object",
                                            "additionalProperties": {
                                                "properties": {
                                                    "script": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "object",
                                                            "properties": {
                                                                "uses": {
                                                                    "type": "string",
                                                                    "pattern": ".*@.+"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
