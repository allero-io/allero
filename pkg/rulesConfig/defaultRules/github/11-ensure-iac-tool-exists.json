{
    "description": "Ensure that at least one pipeline in each repository runs Terraform tool checker",
    "failureMessage": "Terraform validator tool was not detected in the repository pipelines. It is highly recommended to add one to ensure that infrastructure is well configured.",
    "uniqueId": 11,
    "enabledByDefault": false,
    "schema": {
        "type": "object",
        "additionalProperties": {
            "type": "object",
            "properties": {
                "repositories": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "github-actions-workflows": {
                                "type": "object",
                                "additionalProperties": {
                                    "properties": {
                                        "content": {
                                            "properties": {
                                                "jobs": {
                                                    "type": "object",
                                                    "additionalProperties": {
                                                        "properties": {
                                                            "steps": {
                                                                "type": "array",
                                                                "contains": {
                                                                    "anyOf": [
                                                                        {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "uses": {
                                                                                    "type": "string",
                                                                                    "pattern": ".*bridgecrewio/checkov-action@.*"
                                                                                }
                                                                            }
                                                                        },                                                                        
                                                                        {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "uses": {
                                                                                    "type": "string",
                                                                                    "pattern": ".*tenable/terrascan-action@.*"
                                                                                }
                                                                            }
                                                                        },                                                                        
                                                                        {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "uses": {
                                                                                    "type": "string",
                                                                                    "pattern": ".*snyk/actions/iac@.*"
                                                                                }
                                                                            }
                                                                        },
                                                                        {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "uses": {
                                                                                    "type": "string",
                                                                                    "pattern": ".*aquasecurity/trivy-action@.*"
                                                                                }
                                                                            }
                                                                        },
                                                                        {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "run": {
                                                                                    "type": "string",
                                                                                    "pattern": ".*^[\\S]*trivy.*|.*docker .* run .*(aquasec/)?trivy.*"
                                                                                }
                                                                            }
                                                                        }
                                                                    ]
                                                                },
                                                                "minContains": 1
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
