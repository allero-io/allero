{
    "description": "Prevent use of password as plain text",
    "failureMessage": "a password key is used without obfuscation. We recommend using github secrets manager instead",
    "schema": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "repositories": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "github-actions-workflows": {
                    "type": "object",
                    "additionalProperties": {
                      "properties": {
                        "content": {
                          "properties": {
                            "jobs": {
                              "type": "object",
                              "additionalProperties": {
                                "properties": {
                                  "steps": {
                                    "type": "array",
                                    "items": {
                                      "type": "object",
                                      "properties": {
                                        "with": {
                                          "type": "object",
                                          "patternProperties": {
                                            ".*password.*": {
                                              "type": "string",
                                              "pattern": "\\${{.*}}( *|$)"
                                            }
                                          }
                                        }
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
}
