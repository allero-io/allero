{
    "description": "Ensure that at least one pipeline in each repository runs SCA tool checker",
    "failureMessage": "SCA tool was not detected in the repository pipelines. It is highly recommended to add a scan to verify licensing and assess vulnerabilities.",
    "uniqueId": 10,
    "enabledByDefault": false,
    "schema": {
        "type": "object",
        "additionalProperties": {
            "type": "object",
            "properties": {
                "repositories": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "github-actions-workflows": {
                                "type": "object",
                                "additionalProperties": {
                                    "properties": {
                                        "content": {
                                            "properties": {
                                                "jobs": {
                                                    "type": "object",
                                                    "additionalProperties": {
                                                        "properties": {
                                                            "steps": {
                                                                "type": "array",
                                                                "contains": {
                                                                    "anyOf": [
                                                                        {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "uses": {
                                                                                    "type": "string",
                                                                                    "pattern": ".*anchore/scan-action@.*"
                                                                                }
                                                                            }
                                                                        },
                                                                        {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "run": {
                                                                                    "type": "string",
                                                                                    "pattern": "^[\\S]*grype|docker .* run .*(anchore/)?grype.*"
                                                                                }
                                                                            }
                                                                        },
                                                                        {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "uses": {
                                                                                    "type": "string",
                                                                                    "pattern": ".*synopsys-sig/detect-action@.*"
                                                                                }
                                                                            }
                                                                        },
                                                                        {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "run": {
                                                                                    "type": "string",
                                                                                    "pattern": ".*https://detect.synopsys.com/detect.*|.*docker .* run .*(blackducksoftware/)?detect.*"
                                                                                }
                                                                            }
                                                                        },
                                                                        {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "uses": {
                                                                                    "type": "string",
                                                                                    "pattern": ".*aquasecurity/trivy-action@.*"
                                                                                }
                                                                            }
                                                                        },
                                                                        {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "run": {
                                                                                    "type": "string",
                                                                                    "pattern": ".*^[\\S]*trivy.*|.*docker .* run .*(aquasec/)?trivy.*"
                                                                                }
                                                                            }
                                                                        }
                                                                    ]
                                                                },
                                                                "minContains": 1
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
