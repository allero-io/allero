{
    "description": "Prevent use of password as plain text",
    "failureMessage": "a password key is used without obfuscation. We recommend using github secrets manager or gitlab-vault instead",
    "uniqueId": 7,
    "enabledByDefault": true,
    "schema": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "projects": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "gitlab-ci": {},
                "jfrog-pipelines": {
                  "type": "object",
                  "additionalProperties": {
                    "properties": {
                      "content": {
                        "properties": {
                          "resources": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "configuration": {
                                  "type": "object",
                                  "patternProperties": {
                                    ".*password.*": {
                                      "type": "string",
                                      "pattern": "\\${{.*}}( *|$)|DYNAMIC_VALUE"
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    } 
  }
  